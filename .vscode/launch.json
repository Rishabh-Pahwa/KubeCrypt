{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug",
			"type": "node",
			"request": "attach",
			"port": 3663,
			"address": "localhost",
			"localRoot": "${workspaceFolder}/src",
			"remoteRoot": "/home/node/app/src",
			"restart": true,
			"timeout": 30000, // Increase timeout to 30 seconds
			"preLaunchTask": "docker-compose-up",
			"postDebugTask": "docker-compose-down"
		}
	]
}
